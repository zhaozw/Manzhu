<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="85dp">
    
    
    <LinearLayout
        android:id="@+id/ll_searchtop"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/iv_top_back"
            android:layout_marginLeft="@dimen/toastmarglr"
            android:src="@mipmap/com_icon_back"
            android:scaleType="centerInside"
            android:layout_width="@dimen/topmenuwh"
            android:layout_height="@dimen/topmenuwh"/>

        <LinearLayout
            android:id="@+id/ll_search"
            android:orientation="horizontal"
            android:background="@drawable/topsearch_bg"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/tv_searchtype"
                android:textColor="@color/secondtextcolor"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:text="宝贝"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginLeft="5dp"
                android:src="@mipmap/com_icon_arr_down_gra"
                android:layout_width="8dp"
                android:layout_height="8dp"/>

            <TextView
                android:id="@+id/tv_searchkeyword"
                android:textColor="@color/secondtextcolor"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:text="|搜索的关键字"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <ImageView
                android:layout_marginRight="10dp"
                android:src="@mipmap/com_icon_sch_gra"
                android:layout_width="15dp"
                android:layout_height="15dp"/>





        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_searchtopmenu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/ll_searchtop1"
            android:layout_width="145dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_searchtop1"
                android:layout_width="@dimen/idle_topiconwh"
                android:layout_height="@dimen/idle_topiconwh"
                android:src="@mipmap/com_icon_rent_ept"/>

            <TextView
                android:id="@+id/tv_searchtop1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7.5dp"
                android:text="出租"
                android:textColor="@color/secondtextcolor"
                android:textSize="12sp"/>


        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/stronglin"/>

        <LinearLayout
            android:id="@+id/ll_searchtop2"
            android:layout_width="145dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_searchtop2"
                android:layout_width="@dimen/idle_topiconwh"
                android:layout_height="@dimen/idle_topiconwh"
                android:src="@mipmap/com_icon_excha_ept"/>

            <TextView
                android:id="@+id/tv_searchtop2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7.5dp"
                android:text="交换"
                android:textColor="@color/secondtextcolor"
                android:textSize="12sp"/>


        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/stronglin"/>

        <LinearLayout
            android:id="@+id/ll_searchtop3"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_searchshaixuan"
                android:layout_width="@dimen/idle_topiconwh"
                android:layout_height="@dimen/idle_topiconwh"
                android:src="@mipmap/com_icon_order_ept"/>

            <TextView
                android:id="@+id/tv_searchshaixuan"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7.5dp"
                android:text="筛选排序"
                android:textColor="@color/secondtextcolor"
                android:textSize="8sp"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>