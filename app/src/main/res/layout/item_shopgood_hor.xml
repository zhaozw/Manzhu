<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"

              android:paddingLeft="10dp"
              android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_goodcover"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/u583"
            app:riv_corner_radius="7.5dip"
            />

        <TextView
            android:id="@+id/tv_bussnesstag"
            android:layout_width="32.5dp"
            android:layout_height="17.5dp"
            android:layout_below="@+id/line"
            android:background="@drawable/shopgood_item_bg"
            android:gravity="center"
            android:text="闲置"
            android:textColor="@color/maintextcolor"
            android:textSize="9sp"
            android:visibility="visible"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_goodname"
        android:textColor="@color/maintextcolor"
        android:maxLines="2"
        android:textSize="10sp"
        android:text="标题标题标题标题标题标题标题"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_price"
        android:textSize="10sp"
        android:singleLine="true"
        android:text=" ¥ 389.00"
        android:textColor="@color/secondtextcolor"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>



</LinearLayout>