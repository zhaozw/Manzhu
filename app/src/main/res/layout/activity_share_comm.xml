<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zpfan.manzhu.ShareCommActivity">
    
    <LinearLayout
       android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">

       <ImageView
           android:layout_marginLeft="10dp"
           android:src="@drawable/com_icon_back"
           android:layout_width="13dp"
           android:layout_height="20dp"/>

        <LinearLayout
           
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="17.5dp"
                android:layout_height="17.5dp"
                android:src="@mipmap/com_icon_order"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7.5dp"
                android:text="佣金最高"
                android:textColor="@color/maintextcolor"
                android:textSize="12sp"/>


        </LinearLayout>

        <View
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/threebackground"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>

        <LinearLayout
           
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="17.5dp"
                android:layout_height="17.5dp"
                android:src="@mipmap/com_icon_order_ept"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7.5dp"
                android:text="分享最多"
                android:textColor="@color/secondtextcolor"
                android:textSize="12sp"/>


        </LinearLayout>




    </LinearLayout>
    



    <View
        android:background="@color/threebackground"
        android:layout_width="match_parent"
        android:layout_height="2.5dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>








</LinearLayout>
