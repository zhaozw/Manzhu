<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
        android:background="@mipmap/us_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="255dp">

        <!-- 顶部的导航栏-->
        <LinearLayout
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageView
                android:id="@+id/iv_top_back"
                android:src="@mipmap/com_icon_back_w"
                android:layout_width="18dp"
                android:layout_height="18dp"/>

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/tv_username"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:text="用户CN"
                android:textColor="@color/buttontext"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:background="@drawable/sex_weight_bg"
                android:gravity="center"
                android:layout_width="12.5dp"
                android:layout_height="12.5dp">


                <ImageView
                    android:id="@+id/iv_manor"
                    android:src="@mipmap/com_icon_male"
                    android:layout_width="8dp"
                    android:layout_height="8dp"/>

            </LinearLayout>

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"/>


            <ImageView
                android:id="@+id/iv_topmenu"
                android:src="@mipmap/com_icon_bmenu_w"
                android:layout_width="18dp"
                android:layout_height="18dp"/>




        </LinearLayout>
        <!-- 头像一栏-->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_userava"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/bootmbc"
                android:src="@drawable/default_avator"
                android:layout_width="75dp"
                android:layout_height="75dp"/>


        </LinearLayout>
        <!--  身份一栏-->
        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/tf_identity"
            app:gravity="center"
            app:max_select="0"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <LinearLayout
            android:layout_marginBottom="17.5dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="粉丝"
                android:textColor="@color/buttontext"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_fansnumber"
                android:textSize="14sp"
                android:layout_marginLeft="7.5dp"
                android:text="0"
                android:textColor="@color/maintextcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/ll_attention"
                android:layout_marginLeft="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:background="@drawable/fanmai_shape"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="25dp">

                <ImageView
                    android:layout_marginRight="7.5dp"
                    android:id="@+id/iv_attention"
                    android:src="@mipmap/com_icon_plus_w"
                    android:layout_width="10dp"
                    android:layout_height="10dp"/>

                <TextView
                    android:id="@+id/tv_attention"

                    android:textSize="10sp"
                    android:textColor="@color/buttontext"
                    android:text="关注TA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>




        </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">


        <LinearLayout
            android:id="@+id/ll_cos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_cos"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/com_icon_cos_elt"/>

            <TextView
                android:id="@+id/tv_cos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7.5dp"
                android:text="TA的COS"
                android:textColor="@color/maintextcolor"
                android:textSize="14sp"/>


        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/stronglin"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/ll_good"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_good"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/com_icon_sh_ept"/>

            <TextView
                android:id="@+id/tv_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7.5dp"
                android:text="TA的宝贝"
                android:textColor="@color/secondtextcolor"
                android:textSize="14sp"/>


        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/stronglin"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/ll_server"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_server"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/com_icon_serv_ept"/>

            <TextView
                android:id="@+id/tv_server"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7.5dp"
                android:text="TA的接单"
                android:textColor="@color/secondtextcolor"
                android:textSize="14sp"/>


        </LinearLayout>



    </LinearLayout>

</LinearLayout>