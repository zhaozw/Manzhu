<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"

              android:layout_width="@dimen/home_top_popw"
              android:layout_height="@dimen/home_top_poph">

    
    
    <LinearLayout
        android:id="@+id/ll_baobei"
        android:gravity="center"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_top_popitemh">

        <ImageView
            android:src="@mipmap/com_icon_goods_type"
            android:layout_width="@dimen/home_pop_popitemiconwh"
            android:layout_height="@dimen/home_pop_popitemiconwh"/>

        <TextView
            android:layout_marginLeft="7.5dp"
            android:singleLine="true"
            android:textColor="@color/maintextcolor"
            android:textSize="12sp"
            android:text="搜宝贝"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/stronglin"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:id="@+id/ll_jiaose"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_top_popitemh">

        <ImageView
            android:src="@mipmap/com_icon_char_type"
            android:layout_width="@dimen/home_pop_popitemiconwh"
            android:layout_height="@dimen/home_pop_popitemiconwh"/>

        <TextView
            android:layout_marginLeft="7.5dp"
            android:singleLine="true"
            android:textColor="@color/maintextcolor"
            android:textSize="12sp"
            android:text="搜角色"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/stronglin"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <LinearLayout
        android:id="@+id/ll_cn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_top_popitemh">

        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_gravity="left|center_vertical"
            android:src="@mipmap/com_icon_cn_type"
            android:layout_width="@dimen/home_pop_popitemiconwh"
            android:layout_height="@dimen/home_pop_popitemiconwh"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7.5dp"
            android:singleLine="true"
            android:textColor="@color/maintextcolor"
            android:textSize="12sp"
            android:text="搜CN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/stronglin"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <LinearLayout
        android:id="@+id/ll_yuedan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_top_popitemh">

        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/com_icon_serv_type"
            android:layout_width="@dimen/home_pop_popitemiconwh"
            android:layout_height="@dimen/home_pop_popitemiconwh"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7.5dp"
            android:singleLine="true"
            android:textColor="@color/maintextcolor"
            android:textSize="12sp"
            android:text="约单"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>












</LinearLayout>