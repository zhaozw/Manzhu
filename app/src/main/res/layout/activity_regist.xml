<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zpfan.manzhu.RegistActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_regsist"
            android:layout_marginTop="@dimen/registricont"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/app_logo_2"
            android:layout_width="@dimen/registriconwh"
            android:layout_height="@dimen/registriconwh"/>



    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_marginLeft="@dimen/quickloginmarl"
        android:layout_marginRight="@dimen/quickloginmarl"
        android:layout_below="@+id/iv_regsist"
        android:layout_marginTop="@dimen/registringiconb"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/passwordh">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/com_icon_phone"
            android:layout_width="@dimen/passwordimghw"
            android:layout_height="@dimen/passwordimghw"/>

        <EditText
            android:id="@+id/ed_phone"
            android:password="true"
            android:textSize="16sp"
            android:maxLength="11"
            android:textColor="@color/maintextcolor"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:hint="注册手机号"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:layout_height="match_parent"/>

        <ImageView
            android:visibility="invisible"
            android:id="@+id/iv_phone"
            android:layout_gravity="center"
            android:src="@mipmap/com_icon_check_g"
            android:layout_marginRight="@dimen/registrightr"
            android:layout_width="@dimen/registright"
            android:layout_height="@dimen/registright"/>


    </LinearLayout>
    <View
        android:id="@+id/regist_lin1"
        android:layout_below="@+id/ll_phone"
        android:background="@color/maintextcolor"
        android:layout_marginLeft="@dimen/quickloginmarl"
        android:layout_marginRight="@dimen/quickloginmarl"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/inputtb"
        android:layout_height="1dp"/>


    <LinearLayout
        android:id="@+id/ll_cn"
        android:layout_marginLeft="@dimen/quickloginmarl"
        android:layout_marginRight="@dimen/quickloginmarl"
        android:layout_below="@+id/regist_lin1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/passwordh">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/com_icon_uname"
            android:layout_width="@dimen/passwordimghw"
            android:layout_height="@dimen/passwordimghw"/>

        <EditText
            android:id="@+id/ed_cn"
            android:textColor="@color/maintextcolor"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:maxLength="12"
            android:hint="用户名/CN"
            android:textSize="16sp"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:layout_height="match_parent"/>

        <ImageView
            android:visibility="invisible"
            android:id="@+id/iv_cn"
            android:layout_gravity="center"
            android:src="@mipmap/com_icon_check_g"
            android:layout_marginRight="@dimen/registrightr"
            android:layout_width="@dimen/registright"
            android:layout_height="@dimen/registright"/>


    </LinearLayout>
    <View
        android:id="@+id/regist_lin2"
        android:layout_below="@+id/ll_cn"
        android:background="@color/maintextcolor"
        android:layout_marginLeft="@dimen/quickloginmarl"
        android:layout_marginRight="@dimen/quickloginmarl"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/inputtb"
        android:layout_height="1dp"/>


    <LinearLayout
        android:id="@+id/ll_asdsf"
        android:layout_marginLeft="@dimen/quickloginmarl"
        android:layout_marginRight="@dimen/quickloginmarl"
        android:layout_below="@+id/regist_lin2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/passwordh">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/com_icon_ivcode"
            android:layout_width="@dimen/passwordimghw"
            android:layout_height="@dimen/passwordimghw"/>

        <EditText
            android:id="@+id/ed_asdsf"
            android:password="true"
            android:textColor="@color/maintextcolor"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:hint="邀请码，没有可不填"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:layout_height="match_parent"/>



    </LinearLayout>
    <View
        android:id="@+id/regist_lin3"
        android:layout_below="@+id/ll_asdsf"
        android:background="@color/maintextcolor"
        android:layout_marginLeft="@dimen/quickloginmarl"
        android:layout_marginRight="@dimen/quickloginmarl"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/inputtb"
        android:layout_height="1dp"/>


    <LinearLayout
        android:id="@+id/ll_password"
        android:layout_marginLeft="@dimen/quickloginmarl"
        android:layout_marginRight="@dimen/quickloginmarl"
        android:layout_below="@+id/regist_lin3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/passwordh">

        <ImageView
            android:layout_marginLeft="@dimen/iconl"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/com_icon_pw"
            android:layout_width="@dimen/passwordimghw"
            android:layout_height="@dimen/passwordimghw"/>

        <EditText
            android:id="@+id/ed_password"
            android:password="true"
            android:textColor="@color/maintextcolor"
            android:layout_marginLeft="20dp"
            android:maxLength="12"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:hint="登陆密码，6-12位字母或数字"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:layout_height="match_parent"/>

        <ImageView
            android:visibility="invisible"
            android:id="@+id/iv_password"
            android:layout_gravity="center"
            android:src="@mipmap/com_icon_check_g"
            android:layout_marginRight="@dimen/registrightr"
            android:layout_width="@dimen/registright"
            android:layout_height="@dimen/registright"/>


    </LinearLayout>
    <View
        android:id="@+id/regist_lin4"
        android:layout_below="@+id/ll_password"
        android:background="@color/maintextcolor"
        android:layout_marginLeft="@dimen/quickloginmarl"
        android:layout_marginRight="@dimen/quickloginmarl"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/inputtb"
        android:layout_height="1dp"/>


    <LinearLayout
        android:id="@+id/ll_surepw"
        android:layout_marginLeft="@dimen/quickloginmarl"
        android:layout_marginRight="@dimen/quickloginmarl"
        android:layout_below="@+id/regist_lin4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/passwordh">

        <ImageView
            android:layout_marginLeft="@dimen/iconl"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/com_icon_pw"
            android:layout_width="@dimen/passwordimghw"
            android:layout_height="@dimen/passwordimghw"/>

        <EditText
            android:id="@+id/ed_surepw"
            android:password="true"
            android:textColor="@color/maintextcolor"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:maxLength="12"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:hint="再次确认登陆密码"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:layout_height="match_parent"/>

        <ImageView
            android:visibility="invisible"
            android:id="@+id/iv_surepw"
            android:layout_gravity="center"
            android:src="@mipmap/com_icon_check_g"
            android:layout_marginRight="@dimen/registrightr"
            android:layout_width="@dimen/registright"
            android:layout_height="@dimen/registright"/>


    </LinearLayout>
    <View
        android:id="@+id/regist_lin5"
        android:layout_below="@+id/ll_surepw"
        android:background="@color/maintextcolor"
        android:layout_marginLeft="@dimen/quickloginmarl"
        android:layout_marginRight="@dimen/quickloginmarl"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/inputtb"
        android:layout_height="1dp"/>

    <LinearLayout
        android:id="@+id/ll_webcode"
        android:layout_marginLeft="@dimen/quickloginmarl"
        android:layout_marginRight="@dimen/quickloginmarl"
        android:orientation="horizontal"
        android:layout_below="@+id/regist_lin5"
        android:layout_marginTop="@dimen/webcodet"
        android:layout_marginBottom="@dimen/registbuttont"
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputh">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/ed_webcode"
                android:password="true"
                android:textColor="@color/maintextcolor"
                android:layout_marginLeft="@dimen/registwebcodel"
                android:layout_width="match_parent"
                android:hint="输入验证码"
                android:textSize="16sp"
                android:textCursorDrawable="@null"
                android:background="@null"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <View
                android:background="@color/maintextcolor"
                android:layout_width="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="15dp"
                android:layout_height="1dp"/>


        </LinearLayout>

        <Button
            android:id="@+id/bt_webcode"
            android:textSize="14sp"
            android:textColor="@color/bootmbc"
            android:text="发送验证码"
            android:background="@drawable/webcode_button_bg"
            android:layout_width="@dimen/webcodebutton"
            android:layout_height="wrap_content"/>




    </LinearLayout>


    <Button
        android:layout_below="@+id/ll_webcode"
        android:id="@+id/bt_regist"
        android:textSize="14sp"
        android:layout_marginBottom="@dimen/registbuttonb"
        android:text="注  册"
        android:textColor="@color/buttontext"
        android:layout_marginLeft="@dimen/quickloginmarl"
        android:layout_marginRight="@dimen/quickloginmarl"
        android:background="@drawable/login_bg_buttom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/loginbuttonh"/>

    <TextView
        android:id="@+id/tv_login"
        android:layout_marginRight="@dimen/quickloginmarl"
        android:layout_below="@+id/bt_regist"
        android:layout_alignParentRight="true"
        android:textColor="@color/secondtextcolor"
        android:textSize="14sp"
        android:layout_marginBottom="@dimen/kefum"
        android:text="已有帐号，直接登陆"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/ll_kefu"
        android:layout_marginLeft="@dimen/quickloginmarl"
        android:layout_marginRight="@dimen/quickloginmarl"
        android:layout_width="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginBottom="@dimen/loginmargb"
        android:layout_below="@+id/tv_login"
        android:layout_height="wrap_content">

        <TextView
            android:text="如果收不到验证码或注册失败,请立即"
            android:textColor="@color/secondtextcolor"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_kefu"
            android:textColor="@color/maintextcolor"
            android:textSize="14sp"
            android:text=" 联系客服"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    </RelativeLayout>

</ScrollView>
